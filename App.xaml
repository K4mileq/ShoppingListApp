<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ShopingListApp"
             xmlns:converters="clr-namespace:ShopingListApp.Converters"
             x:Class="ShopingListApp.App">
	<Application.Resources>
		<ResourceDictionary>
			<!-- Kolory -->
			<Color x:Key="PrimaryColor">#4CAF50</Color>
			<Color x:Key="TextColor">#333333</Color>
			<Color x:Key="GrayColor">#E0E0E0</Color>

			<!-- Styl dla Button -->
			<Style TargetType="Button" x:Key="PrimaryButtonStyle">
				<Setter Property="BackgroundColor" Value="{StaticResource PrimaryColor}" />
				<Setter Property="TextColor" Value="White" />
				<Setter Property="CornerRadius" Value="8" />
				<Setter Property="FontSize" Value="16" />
				<Setter Property="Margin" Value="5,0" />
				<Setter Property="HeightRequest" Value="40" />
			</Style>

			<!-- Styl dla ProductView -->
			<Style TargetType="HorizontalStackLayout" x:Key="ProductViewStyle">
				<Setter Property="Padding" Value="10" />
				<Setter Property="BackgroundColor" Value="{StaticResource GrayColor}" />
				<Setter Property="Margin" Value="5" />
			</Style>
		</ResourceDictionary>
	</Application.Resources>
</Application>
